<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="match_parent"
    tools:context="com.max.gathernclient.gathernclient.Search">

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/headerHeight"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/imageBack"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom"
                    android:onClick="onClick"
                    android:padding="8dp"
                    android:src="@drawable/error"
                    android:tint="@color/mywhite" />

                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="14"
                    android:gravity="center"
                    android:text="بحث متقدم "
                    android:textAlignment="gravity"
                    android:textColor="#fff"

                    />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mygray"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/bookingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="4dp">

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:id="@+id/bookingtime"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@drawable/shape_color_white_radius5"
                            android:gravity="center_vertical"
                            android:minHeight="30dp"
                            android:onClick="onClick"
                            android:padding="8dp"
                            android:text="موعد الحجز الاربعاء 16 يناير"
                            android:textAlignment="gravity"
                            android:textColor="@color/myblack" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/calendar" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.max.gathernclient.gathernclient.MyEditText
                            android:id="@+id/enterName"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_color_white_radius5"
                            android:gravity="center_vertical"
                            android:hint="إسم الشالية أو المخيم..."
                            android:inputType="text"
                            android:padding="8dp"
                            android:textAlignment="gravity"
                            android:textColor="@color/myblack"
                            android:textSize="14sp" />

                        <com.max.gathernclient.gathernclient.MyEditText
                            android:id="@+id/enterCode"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_color_white_radius5"
                            android:gravity="center_vertical"
                            android:hint="رقم الكود..."
                            android:inputType="number"
                            android:padding="8dp"
                            android:textAlignment="gravity"
                            android:textColor="@color/myblack"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.max.gathernclient.gathernclient.MyTextView
                                android:id="@+id/choseCity"
                                android:layout_width="match_parent"
                                android:layout_height="36dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginBottom="4dp"
                                android:background="@drawable/shape_color_white_radius5"
                                android:gravity="center_vertical"
                                android:onClick="onClick"
                                android:padding="8dp"
                                android:text="الرياض"
                                android:textAlignment="gravity"
                                android:textColor="@color/myblack"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="24dp"
                                android:src="@drawable/baseline_keyboard_arrow_down_black_24" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.max.gathernclient.gathernclient.MyTextView

                                android:id="@+id/chosePrice"
                                android:layout_width="match_parent"
                                android:layout_height="36dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="4dp"
                                android:background="@drawable/shape_color_white_radius5"
                                android:gravity="center_vertical"
                                android:onClick="onClick"
                                android:padding="8dp"
                                android:text=" كل الاسعار"
                                android:textAlignment="gravity"
                                android:textColor="@color/myblack"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="24dp"
                                android:src="@drawable/baseline_keyboard_arrow_down_black_24" />
                        </FrameLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <com.max.gathernclient.gathernclient.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="السعر"
                        android:textColor="@color/myblack" />

                    <com.max.gathernclient.gathernclient.MyTextView
                        android:id="@+id/startPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="4dp"
                        android:background="@drawable/shape_color_primary_radius60"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="sar 1"
                        android:textAllCaps="true"
                        android:textColor="@color/mywhite" />

                    <com.max.gathernclient.gathernclient.MyTextView
                        android:id="@+id/endPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="4dp"
                        android:background="@drawable/shape_color_primary_radius60"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="sar 15000"
                        android:textAllCaps="true"

                        android:textColor="@color/mywhite" />
                </LinearLayout>

                <com.max.gathernclient.gathernclient.RangeSeekBar
                    android:id="@+id/priceRange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:absoluteMaxValue="15000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <com.max.gathernclient.gathernclient.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="عدد الأشخاص"
                        android:textColor="@color/myblack"

                        />

                    <com.max.gathernclient.gathernclient.MyTextView
                        android:id="@+id/startNumOfPerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="4dp"
                        android:background="@drawable/shape_color_primary_radius60"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="من :0"

                        android:textAllCaps="true"
                        android:textColor="@color/mywhite" />

                    <com.max.gathernclient.gathernclient.MyTextView
                        android:id="@+id/endNumOfPerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="4dp"
                        android:background="@drawable/shape_color_primary_radius60"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text=" إلي :500"
                        android:textAllCaps="true"

                        android:textColor="@color/mywhite" />
                </LinearLayout>

                <com.max.gathernclient.gathernclient.RangeSeekBar
                    android:id="@+id/rangeNumOfPerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:absoluteMaxValue="500" />


                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="التقييم"
                    android:textColor="@color/myblack" />

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/ratingFlexBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:flexDirection="row"
                    app:flexWrap="wrap"

                    />
                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="المسبح"
                    android:textColor="@color/myblack" />
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/PoolFlexBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:flexDirection="row"
                    app:flexWrap="wrap"

                    />

                    <com.max.gathernclient.gathernclient.MyTextView
                        android:id="@+id/poolTypeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="نوع المسبح"
                        android:textColor="@color/myblack"
                        android:visibility="gone"
                        />
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/PoolTypeFlexBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:flexDirection="row"
                        app:flexWrap="wrap"
                        android:visibility="gone"
                        />
                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="غرف النوم"
                    android:textColor="@color/myblack" />

                <FrameLayout
                    android:id="@+id/bedRoomsFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="الفئات"
                    android:textColor="@color/myblack" />

                <FrameLayout
                    android:id="@+id/classesFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="المرافق"
                    android:textColor="@color/myblack" />

                <FrameLayout
                    android:id="@+id/elmarafeqFramelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="مرافق المطبخ"
                    android:textColor="@color/myblack" />

                <FrameLayout
                    android:id="@+id/marafeqElmatbakhFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <com.max.gathernclient.gathernclient.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="عدد دورات المياة"
                        android:textColor="@color/myblack" />

                    <com.max.gathernclient.gathernclient.MyTextView
                        android:id="@+id/numOfWc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_color_primary_radius60"
                        android:gravity="center"
                        android:maxWidth="16dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="0"
                        android:textAlignment="gravity"
                        android:textAllCaps="true"
                        android:textColor="@color/mywhite" />

                </LinearLayout>

                <com.max.gathernclient.gathernclient.RangeSeekBar
                    android:id="@+id/singleSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:absoluteMaxValue="15"
                    app:singleThumb="true" />

                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="دورات المياة"
                    android:textColor="@color/myblack" />

                <FrameLayout
                    android:id="@+id/wcFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="خدمات مجانية "
                    android:textColor="@color/myblack" />

                <FrameLayout
                    android:id="@+id/freeServicesFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/searchResult"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:onClick="onClick"
                android:text="عرض       وحدة"
                android:textAlignment="gravity"
                android:textColor="@color/mywhite"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/loading"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:src="@drawable/loading"
                android:visibility="gone" />
        </FrameLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
