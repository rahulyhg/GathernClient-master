<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context="com.max.gathernclient.gathernclient.InfoBookingCOD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:padding="4dp"
                android:src="@drawable/error"
                android:tint="@color/mywhite" />

            <com.max.gathernclient.gathernclient.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="14"
                android:gravity="center"

                android:text="تفاصيل الحجز"
                android:textAlignment="gravity"
                android:textColor="#fff" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mygray"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp">

                <com.max.gathernclient.gathernclient.MyTextView
                    android:id="@+id/headText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/shape_color_white_radius5"
                    android:gravity="center"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="12dp"
                    android:text="حجزك الآن مبدئي"
                    android:textAlignment="gravity"
                    android:textColor="#1B1B1B"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/invoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/shape_color_white_radius5"
                    android:orientation="vertical"
                    android:paddingTop="4dp"
                    android:paddingRight="4dp"
                    android:paddingLeft="4dp"
                    android:paddingBottom="12dp"
                    >

                    <com.max.gathernclient.gathernclient.MyTextView
                        android:id="@+id/reserve_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/textBlackColor"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/mygray"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="رقم الحجز:"
                            android:textColor="@color/textBlackColor"
                            android:textSize="12sp" />

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:id="@+id/reserve_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="88135"
                            android:textColor="@color/textBlackColor"
                            android:textAlignment="gravity"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="الشاليه:"
                            android:textColor="@color/textBlackColor"
                            android:textSize="12sp" />

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:id="@+id/chalet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textColor="@color/textBlackColor"
                            android:text="فيصل - فهد"
                            android:textAlignment="gravity"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/mygray"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="الوحدة:"
                            android:textColor="@color/textBlackColor"
                            android:textSize="12sp" />

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:id="@+id/unit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textColor="@color/textBlackColor"
                            android:text="فهد الشالية الأول"
                            android:textAlignment="gravity"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="التاريخ:"
                            android:textColor="@color/textBlackColor"
                            android:textSize="12sp" />

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:id="@+id/check_in"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textColor="@color/textBlackColor"
                            android:text="الثلاثاء2019/02/12م"
                            android:textAlignment="gravity"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/mygray"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/textBlackColor"
                            android:text="سعر الليلة الواحدة:"
                            android:textSize="12sp" />

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:id="@+id/unitPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="SAR 1500"
                            android:textColor="@color/textBlackColor"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="الخصم:"
                            android:textColor="@color/textBlackColor"
                            android:textSize="12sp" />

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:id="@+id/discount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="SAR 0"
                            android:textColor="@color/textBlackColor"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/mygray"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="الإجمالي"
                            android:textColor="@color/textBlackColor"
                            android:textSize="12sp" />

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:id="@+id/total"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/textBlackColor"
                            android:text="SAR 1500"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/mygray" />

                    <com.max.gathernclient.gathernclient.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="ملاحظة:"
                        android:textColor="@color/textBlackColor"
                        />

                    <com.max.gathernclient.gathernclient.MyTextView
                        android:id="@+id/note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/textBlackColor"
                        />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
