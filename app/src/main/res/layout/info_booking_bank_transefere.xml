<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@color/mygray"
    tools:context="com.max.gathernclient.gathernclient.InfoBookingBankTransefere">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:padding="4dp"
            android:src="@drawable/error"
            android:tint="@color/mywhite" />

        <com.max.gathernclient.gathernclient.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="14"
            android:gravity="center"

            android:text="تفاصيل الحجز"
            android:textAlignment="gravity"
            android:textColor="#fff" />

    </LinearLayout>

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_color_white_radius5"
            android:layout_marginTop="30dp"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            >
            <com.max.gathernclient.gathernclient.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حجزك الآن بإنتظار السداد"
                android:textAlignment="gravity"
                android:gravity="center"
                android:textColor="#20C1ED"
                android:padding="4dp"
                android:textSize="18sp"
                />
            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/timeToPayTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#1B1B1B"
                android:padding="4dp"
                />
            <com.max.gathernclient.gathernclient.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="كيف تأكد حجزك ؟"
                android:textColor="@color/myblack"
                android:textStyle="bold"
                android:textSize="14sp"
                android:padding="4dp"
                />
            <com.max.gathernclient.gathernclient.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1- حول العربون SAR 1 علي حساباتنا البنكيه ."
                android:textSize="14sp"
                android:textColor="#1B1B1B"
                android:padding="4dp"
                />
            <com.max.gathernclient.gathernclient.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2- عبي نموذج تأكيد الحواله وارفق ايصال التحويل ."
                android:textSize="14sp"
                android:textColor="#1B1B1B"
                android:padding="4dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bankAccountsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_color_white_radius5"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:padding="4dp"
            >
            <com.max.gathernclient.gathernclient.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الحسابات البنكية"
                android:textColor="#1B1B1B"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mydarkgray"
                android:layout_marginBottom="8dp"
                />

<LinearLayout
    android:id="@+id/elBankElAhly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="12dp"
    android:visibility="gone"
    >
    <com.max.gathernclient.gathernclient.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اسم البنك : الأهلي"
        android:layout_marginRight="60dp"
        android:textColor="#1B1B1B"
        />
    <com.max.gathernclient.gathernclient.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="رقم الحساب :20379818000105"
        android:layout_marginRight="60dp"
        android:textColor="#1B1B1B"
        />
    <com.max.gathernclient.gathernclient.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="الايبان : SA3110000020379818000105"
        android:layout_marginRight="60dp"
        android:textColor="#1B1B1B"
        />
    <com.max.gathernclient.gathernclient.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اسم صاحب الحساب : مؤسسة السحابة العاشرة لتقنية المعلومات"
        android:layout_marginRight="60dp"
        android:textColor="#1B1B1B"
        />
        </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
            <LinearLayout
                android:id="@+id/elBankElRaghy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="16dp"
                >
                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="اسم البنك : الراجحي"
                    android:layout_marginRight="50dp"
                    android:textColor="#1B1B1B"
                    />
                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="رقم الحساب :504608010950047"
                    android:layout_marginRight="50dp"
                    android:textColor="#1B1B1B"
                    />
                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="الايبان : SA5180000504608010950047"
                    android:layout_marginRight="50dp"
                    android:textColor="#1B1B1B"
                    />
                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="اسم صاحب الحساب : مؤسسة السحابة العاشرة لتقنية المعلومات"
                    android:layout_marginRight="50dp"
                    android:textColor="#1B1B1B"
                    />
            </LinearLayout>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/elraghy"
                    />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_color_white_radius5"
            android:padding="8dp"
            >
            <com.max.gathernclient.gathernclient.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تأكيد الحوالة"
                android:paddingRight="8dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mydarkgray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                />
            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/whichBank"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="اي بنك حولت له؟"
                android:textAlignment="gravity"
                android:onClick="onClick"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingRight="8dp"
                />
            <com.max.gathernclient.gathernclient.MyEditText
                android:id="@+id/howMuchPrice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="كم المبلغ اللي حولته"
                android:textSize="12sp"
                android:inputType="number"
                android:layout_marginTop="4dp"
                android:textAlignment="gravity"
                android:gravity="center"
                android:paddingRight="8dp"
                />
            <com.max.gathernclient.gathernclient.MyEditText
                android:id="@+id/accountHolderName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:textAlignment="gravity"
                android:gravity="center"
                android:hint="اسم صاحب الحساب اللي حولت منه"
                android:textSize="12sp"
                android:paddingRight="8dp"
                />
            <com.max.gathernclient.gathernclient.MyEditText
                android:id="@+id/lastFourDigits"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAlignment="gravity"
                android:gravity="center"
                android:inputType="number"
                android:layout_marginTop="4dp"
                android:hint="اخر اربعة ارقام من رقم الحساب"
                android:textSize="12sp"
                android:paddingRight="8dp"
                />
            <FrameLayout
                android:id="@+id/frameImageTransfer"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:onClick="onClick"
                android:layout_marginTop="4dp"
                >
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_gravity="end"
                   >
                   <ImageView
                       android:id="@+id/cancelImage"
                       android:layout_width="18dp"
                       android:layout_height="18dp"
                       android:src="@drawable/error"
                       android:visibility="gone"
                       android:tint="@color/mydarkgray"
                       />
            <ImageView
                android:id="@+id/imageInvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:scaleType="fitXY"
                android:layout_marginTop="4dp"
                />
               </LinearLayout>
                <com.max.gathernclient.gathernclient.MyTextView
                    android:id="@+id/textOnImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="إضغط هنا و(أرفق أو صور)ايصال الحوالة"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                >
            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/confirmBooking"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="أكد الحجز"
                android:onClick="onClick"
                android:textAlignment="gravity"
                android:textColor="@color/mywhite"
                android:gravity="center"
                android:background="@color/colorPrimary"
                />
            <ImageView
                android:id="@+id/loading"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/loading"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shape_color_white_radius5"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:paddingBottom="12dp"
            >

            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/reserve_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/textBlackColor"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mygray"
                android:orientation="horizontal"
                android:padding="4dp">

                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="رقم الحجز:"
                    android:textColor="@color/textBlackColor"
                    android:textSize="12sp" />

                <com.max.gathernclient.gathernclient.MyTextView
                    android:id="@+id/reserve_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="88135"
                    android:textColor="@color/textBlackColor"
                    android:textAlignment="gravity"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="الشاليه:"
                    android:textColor="@color/textBlackColor"
                    android:textSize="12sp" />

                <com.max.gathernclient.gathernclient.MyTextView
                    android:id="@+id/chalet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="@color/textBlackColor"
                    android:text="فيصل - فهد"
                    android:textAlignment="gravity"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mygray"
                android:orientation="horizontal"
                android:padding="4dp">

                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="الوحدة:"
                    android:textColor="@color/textBlackColor"
                    android:textSize="12sp" />

                <com.max.gathernclient.gathernclient.MyTextView
                    android:id="@+id/unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="@color/textBlackColor"
                    android:text="فهد الشالية الأول"
                    android:textAlignment="gravity"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="التاريخ:"
                    android:textColor="@color/textBlackColor"
                    android:textSize="12sp" />

                <com.max.gathernclient.gathernclient.MyTextView
                    android:id="@+id/check_in"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/textBlackColor"
                    android:text="الثلاثاء2019/02/12م"
                    android:textAlignment="gravity"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mygray"
                android:orientation="horizontal"
                android:padding="4dp">

                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textBlackColor"
                    android:text="سعر الليلة الواحدة:"
                    android:textSize="12sp" />

                <com.max.gathernclient.gathernclient.MyTextView
                    android:id="@+id/unitPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SAR 1500"
                    android:textColor="@color/textBlackColor"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="الخصم:"
                    android:textColor="@color/textBlackColor"
                    android:textSize="12sp" />

                <com.max.gathernclient.gathernclient.MyTextView
                    android:id="@+id/discount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SAR 0"
                    android:textColor="@color/textBlackColor"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mygray"
                android:orientation="horizontal"
                android:padding="4dp">

                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="الإجمالي"
                    android:textColor="@color/textBlackColor"
                    android:textSize="12sp" />

                <com.max.gathernclient.gathernclient.MyTextView
                    android:id="@+id/total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textBlackColor"
                    android:text="SAR 1500"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:background="@color/mygray" />

            <com.max.gathernclient.gathernclient.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="ملاحظة:"
                android:textColor="@color/textBlackColor"
                />

            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/textBlackColor"
                />
        </LinearLayout>


    </LinearLayout>
</ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
