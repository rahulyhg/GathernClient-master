<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:layout_margin="12dp"
    android:background="@drawable/shape_color_white_radius5"
    android:orientation="vertical">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="140dp"
    >
    <ImageView
        android:id="@+id/imageHouse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/altscreen"
        />
    <com.max.gathernclient.gathernclient.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="باإنتظار السداد"
        android:layout_marginTop="8dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/mywhite"
        android:background="@color/colorPrimary"
        />
    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:background="@drawable/shape_color_transyellow"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:padding="4dp"
            android:src="@drawable/ic_stopwatch"
            />
        <com.max.gathernclient.gathernclient.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المهلة المتبقية"
            android:layout_gravity="center_horizontal"

            />
        <com.max.gathernclient.gathernclient.MyTextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="43:22"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/textBlackColor"
            />
    </LinearLayout>
</FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/nameAndHouseNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سعد , شالية الثالث"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/myblack" />

            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/expireState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="باإنتظار السداد"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/myblue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/dayOfDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="19"
                android:textSize="20sp"
                android:padding="0dp"
                android:textAlignment="gravity"
                android:gravity="end"
                android:layout_marginTop="4dp"
                />

            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018-10"
                android:maxLength="7"
                android:textSize="12sp"
                android:textAlignment="gravity"
                android:gravity="end"
                />
        </LinearLayout>
<pl.droidsonroids.gif.GifImageView
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="60dp"
    android:tint="@color/colorPrimary"
    android:layout_gravity="bottom"
    android:src="@drawable/animat_clock"
    android:padding="4dp"
    />
    </LinearLayout>


</LinearLayout>