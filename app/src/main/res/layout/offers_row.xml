    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/shape_color_white_radius5"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/houseImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/screen" />

            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/singleTextOnImage"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_color_primary_radius10"
                android:gravity="center"
                android:padding="4dp"
                android:text=""
                android:textAlignment="gravity"
                android:textColor="#fff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/show"
                    android:tint="@color/mywhite" />

                <com.max.gathernclient.gathernclient.MyTextView
                    android:id="@+id/views_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="413"
                    android:textColor="@color/mywhite"
                    android:textSize="8sp" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mywhite"
            android:orientation="vertical"


            >

            <LinearLayout
                android:id="@+id/textLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.max.gathernclient.gathernclient.MyTextView
                        android:id="@+id/houseName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="استراحة المملكة"
                        android:textColor="#ff000000" />

                    <com.max.gathernclient.gathernclient.MyTextView
                        android:id="@+id/houseDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="استراحة 1"
                        android:textColor="@color/myblack"

                        />

                    <com.max.gathernclient.gathernclient.MyTextView
                        android:id="@+id/houseArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="الخبر , الكوثر"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <FrameLayout
                        android:id="@+id/oldPriceFrameLayOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"

                        >

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:id="@+id/oldPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="center"
                            android:text="السعر 150 ريال"
                            android:textAlignment="gravity"
                            android:textColor="#B40000"
                            />

                        <View
                            android:layout_width="90dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center_vertical"
                            android:background="#B40000" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:id="@+id/Price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="السعر "
                            android:textAlignment="gravity"
                            android:textColor="#12b600"
                            android:textSize="12sp" />

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:id="@+id/housePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="500"
                            android:textAlignment="gravity"
                            android:textColor="#12b600"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.max.gathernclient.gathernclient.MyTextView
                            android:id="@+id/currency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text=" ريال"
                            android:textAlignment="gravity"
                            android:textColor="#12b600"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <RatingBar
                        android:id="@+id/houseRating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginRight="8dp"
                        android:max="5"
                        android:stepSize="1" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_buttons_allhouse"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:padding="8dp"
                android:orientation="horizontal">

                <com.max.gathernclient.gathernclient.MyTextView
                    android:id="@+id/button_more_details"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_color_primary_radius5"
                    android:gravity="center"
                    android:text="التفاصيل"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"

                    android:textAlignment="gravity"
                    android:textColor="#fff" />

                <com.max.gathernclient.gathernclient.MyTextView
                    android:id="@+id/button_book_now"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_color_green_radius5"
                    android:gravity="center"
                    android:text="احجز الآن"
                    android:lineSpacingMultiplier=".5"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="gravity"
                    android:textColor="#fff" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>