<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="wrap_content"
    android:layoutDirection="rtl"
    android:layout_height="250dp"
    android:orientation="horizontal"
    android:layout_margin="4dp"
    >
    <FrameLayout
        android:id="@+id/frameOfStartBanner"
        android:layout_height="match_parent"
        android:layout_width="100dp"
        >
    <ImageView
        android:id="@+id/startBanner"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/screen"
        android:cropToPadding="true"
        android:background="@drawable/shape_color_white_radius5"
        />
        <com.max.gathernclient.gathernclient.MyTextView
            android:id="@+id/singleTextOnImage"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text=""
            android:maxWidth="100dp"
            android:textSize="18sp"
            />

    </FrameLayout>
<LinearLayout
    android:id="@+id/textLayout"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@drawable/shape_color_white_radius5"
    android:orientation="vertical">
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/houseImage"
        android:layout_height="150dp"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/screen"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        >

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/show"
            android:tint="@color/mywhite"
            android:layout_gravity="center_vertical"
            />
        <com.max.gathernclient.gathernclient.MyTextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="413"
            android:textSize="8sp"
            android:textColor="@color/mywhite"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

</FrameLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <com.max.gathernclient.gathernclient.MyTextView
            android:id="@+id/houseName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="استراحة المملكة"
            android:layout_weight="1"
            android:textColor="#ff000000"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />
        <com.max.gathernclient.gathernclient.MyTextView
            android:id="@+id/houseDescription"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="استراحة 1"
            android:textColor="#ff000000"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"

            />
        <com.max.gathernclient.gathernclient.MyTextView
            android:id="@+id/houseArea"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="الخبر , الكوثر"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layoutDirection="ltr"
            android:layout_marginStart="8dp">
            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/housePrice"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="500"
                android:textAlignment="gravity"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="#12b600"
                 />
        </LinearLayout>
        <RatingBar
            android:id="@+id/houseRating"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:rating="2.0"
            android:max="5"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:outlineSpotShadowColor="@color/mygreen"
            android:stepSize="1"
            android:textAlignment="gravity"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_marginRight="8dp" />

    </LinearLayout>


    </LinearLayout>
</LinearLayout>

</LinearLayout>