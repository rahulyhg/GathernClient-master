<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/headerLayout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:visibility="gone"
    >
    <com.max.gathernclient.gathernclient.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="أضف لجمعاتك المزيد من المرح"
        android:textColor="@color/colorPrimary"
        android:textAlignment="gravity"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="4dp"
        />
    <com.max.gathernclient.gathernclient.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="للطلب والإستفسار تواصل معنا"
        android:textAlignment="gravity"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:textSize="12sp"
        />
    <com.max.gathernclient.gathernclient.MyTextView
        android:id="@+id/textCall"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="920007858 "
        android:textAlignment="center"
        android:textColor="#fff"
        android:onClick="onClick"
        android:textSize="10sp"
        android:lineSpacingMultiplier=".7"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_color_primary_radius5"
        />
</LinearLayout>

<LinearLayout
    android:id="@+id/baseLayout"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:padding="4dp"
    android:background="@drawable/shape_color_white_radius5"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4"
        >
        <com.max.gathernclient.gathernclient.MyTextView
            android:id="@+id/prts_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="سماعة مع ستاند ومايكروفون "
            android:textColor="@color/myblack"
            />
        <com.max.gathernclient.gathernclient.MyTextView
            android:id="@+id/parties_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="سماعة مع ستاند ومايكروفون"
            android:textSize="10sp"
            android:maxHeight="56dp"
            android:minHeight="40dp"
            />
        <com.max.gathernclient.gathernclient.MyTextView
            android:id="@+id/parties_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAR 250"
            android:textAllCaps="true"
            android:textAlignment="gravity"
            android:layout_gravity="bottom"
            android:textSize="12sp"
            android:gravity="start"
            android:textColor="@color/mygreen"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/parties_image"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_margin="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/altscreen"
        android:background="@drawable/shape_color_white_strok_radius5"
        />
</LinearLayout>

</LinearLayout>