<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="match_parent"
    tools:context="com.max.gathernclient.gathernclient.TransparentActivity"
    android:background="@color/transBlack"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_color_white_radius15"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
>
        <com.max.gathernclient.gathernclient.MyTextView
            android:id="@+id/titleImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="حدد المدينة"
            android:textAlignment="gravity"
            android:textColor="@color/colorPrimary"
            />

        <View
            android:id="@+id/topLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mydarkgray" />
<LinearLayout
    android:id="@+id/layoutBankImages"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F7F7F7"
    android:visibility="gone"
    >
    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/emirates_bank"
        android:layout_gravity="center_horizontal"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/aljazira_bank"
        android:layout_gravity="center_horizontal"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/alawal_bank"
        android:layout_gravity="center_horizontal"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/riyad_bank"
        android:layout_gravity="center_horizontal"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/sabb_bank"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialogRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:layout_margin="8dp" />

        <View
            android:id="@+id/bottomLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mydarkgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/positiveButton"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="إختيار"
                android:textAlignment="gravity"
                android:gravity="center"
                android:textColor="@color/colorPrimary" />
<View
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:background="@color/mydarkgray"
    />
            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/negativeButton"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:textAlignment="gravity"
                android:gravity="center"
                android:text="إلغاء"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/layotshapewhite"
        android:layout_margin="12dp"
        android:visibility="gone"
        >
        <com.max.gathernclient.gathernclient.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اتصل للإستفسار , نحن سعداء لمساعدتك"
            android:textAlignment="gravity"
            android:gravity="center"
            android:minHeight="70dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mydarkgray"
            />
        <com.max.gathernclient.gathernclient.MyTextView
            android:id="@+id/whatsAppChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="محادثة واتساب"
            android:textAlignment="gravity"
            android:gravity="center"
            android:minHeight="70dp"
            android:onClick="onClick"
            android:textColor="@color/myblue"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mydarkgray"
            />
        <com.max.gathernclient.gathernclient.MyTextView
            android:id="@+id/startCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="إتصال هاتفي"
            android:textAlignment="gravity"
            android:gravity="center"
            android:onClick="onClick"
            android:minHeight="70dp"
            android:textColor="@color/myblue"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mydarkgray"
            />
        <com.max.gathernclient.gathernclient.MyTextView
            android:id="@+id/finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="إلغاء"
            android:onClick="onClick"
            android:textAlignment="gravity"
            android:minHeight="70dp"
            android:gravity="center"
            android:textColor="@color/myblue"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
