<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:layout_margin="12dp"
    android:background="@drawable/shape_color_white_radius5"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageHouse"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/nameAndHouseNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="سعد , شالية الثالث"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/myblack" />

            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/expireState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="منتهي الصلاحية "
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/myorange" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/dayOfDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="19"
                android:textSize="20sp"
                android:padding="0dp"
                android:textAlignment="gravity"
                android:gravity="end"
               android:layout_marginTop="4dp"
                />

            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018-10"
                android:maxLength="7"
                android:textSize="12sp"
                android:textAlignment="gravity"
                android:gravity="end"
                />
        </LinearLayout>

<ImageView

    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="60dp"
    android:tint="@color/mygray"
    android:layout_gravity="bottom"
    android:src="@drawable/calendar"
    android:padding="4dp"
    />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mygray"
        android:layout_margin="4dp"
        />
    <com.max.gathernclient.gathernclient.MyTextView
        android:id="@+id/bookAgain"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="إحجز مجدداً"
        android:textAlignment="gravity"
        android:gravity="center"
        />
</LinearLayout>