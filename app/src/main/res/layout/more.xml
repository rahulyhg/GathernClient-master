<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mygray"
    tools:context="com.max.gathernclient.gathernclient.More">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mygray"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <com.max.gathernclient.gathernclient.MyTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/headerHeight"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="20dp"
            android:text="@string/app_name"
            android:textAlignment="gravity"
            android:textColor="#fff"
            android:textSize="18sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mydarkgray"
            android:layout_marginTop="12dp"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >
        <LinearLayout
            android:id="@+id/myAccountData"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/mywhite"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tint="@color/mydarkgray"
                android:layout_gravity="center_vertical"
                android:src="@drawable/user"
                android:padding="12dp"
                />

            <com.max.gathernclient.gathernclient.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_margin="12dp"
                android:text="بياناتي" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_keyboard_arrow_left_black_36"
                android:layout_gravity="center_vertical"
                android:tint="#DDDDDD"
                />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/lineLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mydarkgray"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mydarkgray"
                android:layout_marginTop="12dp"
                />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/myFavorite"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/mywhite"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tint="@color/mydarkgray"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/empty_heart"
                    android:padding="12dp"
                    />

                <com.max.gathernclient.gathernclient.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_margin="12dp"
                    android:text="مفضلتي" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/baseline_keyboard_arrow_left_black_36"
                    android:layout_gravity="center_vertical"
                    android:tint="#DDDDDD"
                    />
            </LinearLayout>

        <LinearLayout
            android:id="@+id/account"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tint="@color/mydarkgray"
                android:layout_gravity="center_vertical"
                android:src="@drawable/user"
                android:padding="12dp"
                />

            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/myAccountText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_margin="12dp"
                android:text="حسابي" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_keyboard_arrow_left_black_36"
                android:layout_gravity="center_vertical"
                android:tint="#DDDDDD"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mydarkgray"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mydarkgray"
            android:layout_marginTop="12dp"
            />
        <LinearLayout
            android:id="@+id/faqLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:onClick="onClick"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tint="@color/mydarkgray"
                android:layout_gravity="center_vertical"
                android:src="@drawable/question"
                android:padding="12dp"
                />

            <com.max.gathernclient.gathernclient.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_margin="12dp"
                android:text="الأسئلة المتكررة" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_keyboard_arrow_left_black_36"
                android:layout_gravity="center_vertical"
                android:tint="#DDDDDD"
                />
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mydarkgray"
                />
        <LinearLayout
            android:id="@+id/contactUsLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:onClick="onClick"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tint="@color/mydarkgray"
                android:layout_gravity="center_vertical"
                android:src="@drawable/support"
                android:padding="12dp"
                />

            <com.max.gathernclient.gathernclient.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_margin="12dp"
                android:text="تواصل معنا" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_keyboard_arrow_left_black_36"
                android:layout_gravity="center_vertical"
                android:tint="#DDDDDD"
                />
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mydarkgray"
                />
        <LinearLayout
            android:id="@+id/inviteFriendsLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onClick"
            android:background="#fff"
            android:orientation="horizontal"

            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tint="@color/mydarkgray"
                android:layout_gravity="center_vertical"
                android:padding="12dp"
                android:src="@drawable/gift"
                />

            <com.max.gathernclient.gathernclient.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_margin="12dp"
                android:text="أدع أصدقاءك" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_keyboard_arrow_left_black_36"
                android:layout_gravity="center_vertical"
                android:tint="#DDDDDD"
                />
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mydarkgray"
                />
        <LinearLayout
            android:id="@+id/termsOfUsesLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onClick"
            android:background="#fff"
            android:orientation="horizontal"

            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tint="@color/mydarkgray"
                android:layout_gravity="center_vertical"
                android:padding="12dp"
                android:src="@drawable/document"
                />

            <com.max.gathernclient.gathernclient.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_margin="12dp"
                android:text="شروط الإستخدام" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_keyboard_arrow_left_black_36"
                android:layout_gravity="center_vertical"
                android:tint="#DDDDDD"
                />
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mydarkgray"
                />
        <LinearLayout
            android:id="@+id/privacyLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:onClick="onClick"
            android:orientation="horizontal"

            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tint="@color/mydarkgray"
                android:layout_gravity="center_vertical"
                android:padding="12dp"
                android:src="@drawable/shield"
                />

            <com.max.gathernclient.gathernclient.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_margin="12dp"
                android:text="سياسة الخصوصية" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_keyboard_arrow_left_black_36"
                android:layout_gravity="center_vertical"
                android:tint="#DDDDDD"
                />
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mydarkgray"
                />
        <LinearLayout
            android:id="@+id/owners"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:onClick="onClick"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tint="@color/mydarkgray"
                android:layout_gravity="center_vertical"
                android:padding="12dp"
                android:src="@drawable/portfolio"
                />

            <com.max.gathernclient.gathernclient.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_margin="12dp"
                android:text="تسجيل أصحاب الشاليهات" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_keyboard_arrow_left_black_36"
                android:layout_gravity="center_vertical"
                android:tint="#DDDDDD"
                />
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mydarkgray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
        <LinearLayout
            android:id="@+id/signOutLayout"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tint="@color/mydarkgray"
                android:layout_gravity="center_vertical"
                android:padding="12dp"
                android:src="@drawable/logout"

                />
            <com.max.gathernclient.gathernclient.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_margin="12dp"
                android:text="تسجيل الخروج" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_keyboard_arrow_left_black_36"
                android:layout_gravity="center_vertical"
                android:tint="#DDDDDD"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mydarkgray"
            />
            </LinearLayout>

<com.max.gathernclient.gathernclient.MyTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="v7.1.0"
    android:layout_marginTop="40dp"
    android:layout_gravity="center_horizontal"


    />
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />
    </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        /></android.support.constraint.ConstraintLayout>
