<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/mywhite"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="gravity"
                android:padding="8dp"
                android:gravity="end"
                android:textColor="@color/colorPrimary"
                android:text="cancel"
                />
            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="gravity"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/colorPrimary"
                />
            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:textAlignment="gravity"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                />
            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:textAlignment="gravity"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                />
            <com.max.gathernclient.gathernclient.MyTextView
                android:id="@+id/done"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:textColor="@color/colorPrimary"
                android:text="done"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mydarkgray"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                >

                <com.max.gathernclient.gathernclient.MyScrollView
                    android:id="@+id/dayScrollView"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    >
                    <LinearLayout
                        android:id="@+id/dayLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="80dp"
                        android:paddingBottom="80dp"
                        >
                    </LinearLayout>
                </com.max.gathernclient.gathernclient.MyScrollView>


                <com.max.gathernclient.gathernclient.MyScrollView
                    android:id="@+id/monthScrollView"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    >
                    <LinearLayout
                        android:id="@+id/monthLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="80dp"
                        android:paddingBottom="80dp"
                        >

                    </LinearLayout>
                </com.max.gathernclient.gathernclient.MyScrollView>
                <com.max.gathernclient.gathernclient.MyScrollView
                    android:id="@+id/yearScrollView"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    >
                    <LinearLayout
                        android:id="@+id/yearLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="80dp"
                        android:paddingBottom="80dp"
                        >
                    </LinearLayout>
                </com.max.gathernclient.gathernclient.MyScrollView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/grediant_birth_data_top"
                android:clickable="false"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mydarkgray"
                android:layout_marginTop="80dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/mydarkgray"
                android:layout_marginBottom="80dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/grediant_birth_day_bottom"
                android:clickable="false"
                android:layout_gravity="bottom"
                />

        </FrameLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
