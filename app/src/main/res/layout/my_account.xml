<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="match_parent"
    android:background="@color/mygray"
    tools:context="com.max.gathernclient.gathernclient.MyAccount">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/headerHeight"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageBack"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:padding="8dp"
                android:src="@drawable/error"
                android:tint="@color/mywhite" />

            <com.max.gathernclient.gathernclient.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="4dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:text="حسابي"
                android:textAlignment="gravity"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
      <LinearLayout
          android:layout_width="280dp"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="50dp"
          >
          <ImageView
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:layout_gravity="center_horizontal"
              android:src="@drawable/login"
              android:padding="8dp"
              android:tint="@color/colorPrimary"

              />
      <com.max.gathernclient.gathernclient.MyTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="دخول / تسجيل"
          android:textSize="18sp"
          android:layout_gravity="center_horizontal"
          />
      <com.max.gathernclient.gathernclient.MyTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="تحكم بحجوزاتك و أطلع علي العروض الخاصة"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="12dp"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="12dp"
          android:layout_gravity="center_horizontal"
          >
          <EditText
              android:id="@+id/userPhone"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:text=""
              android:inputType="phone"
              android:minHeight="40dp"
              android:hint="5xxxxxxxx"
              android:textDirection="ltr"
              android:focusable="true"
              android:paddingTop="10dp"
              android:paddingLeft="4dp"
              android:ellipsize="end"
              android:textAlignment="gravity"
              android:gravity="start"
              android:onClick="onClick"
              android:background="@drawable/endcorner"
              android:layout_weight="4"
              />
          <com.max.gathernclient.gathernclient.MyTextView
              android:id="@+id/countryCode"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:text="+966"
              android:textSize="18sp"
              android:textColor="#131313"
              android:padding="4dp"
              android:layout_weight="1"
              android:background="#D6D0D0"
              android:textAlignment="gravity"
              android:gravity="center_vertical"
              android:layout_gravity="center_horizontal"
              />
      </LinearLayout>
      <com.max.gathernclient.gathernclient.MyTextView
          android:id="@+id/warningText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="رقم الجوال لايمكن تركة فارغاً"
        android:layout_marginTop="12dp"
          android:visibility="gone"
          />
          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="12dp"
              >
      <com.max.gathernclient.gathernclient.MyTextView
          android:id="@+id/next"
          android:layout_width="match_parent"
          android:layout_height="42dp"
          android:text="التالي "
          android:textColor="@color/mywhite"
          android:background="@drawable/shape_color_primary_radius5"
          android:textSize="18sp"
          android:textAlignment="gravity"
          android:gravity="center"
          android:onClick="onClick"
          android:enabled="false"
          />
              <ImageView
                  android:id="@+id/loading"
                  android:layout_width="24dp"
                  android:layout_height="24dp"
                  android:src="@drawable/loading"
                  android:layout_gravity="center"
                  android:visibility="gone"
                  />
          </FrameLayout>
      </LinearLayout>

  </LinearLayout>
</android.support.constraint.ConstraintLayout>
